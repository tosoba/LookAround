<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:background="@drawable/bottom_sheet_dialog_background"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/marker_info_window_title_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="3dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/marker_info_window_snippet_text_view"/>

    <TextView
            android:id="@+id/marker_info_window_snippet_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginBottom="3dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/marker_info_window_title_text_view"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/marker_info_window_show_details_btn"/>


    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/marker_info_window_show_details_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/details"
            android:padding="5dp"
            android:background="@drawable/button_background"
            android:textColor="@android:color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/show_details" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/marker_info_window_snippet_text_view"
    />

</androidx.constraintlayout.widget.ConstraintLayout>


