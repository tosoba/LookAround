<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="group" type="com.example.there.aroundmenow.model.UIPlaceTypeGroup"/>
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                       android:layout_width="match_parent" android:layout_height="190dp"
                                       android:layout_margin="5dp"
                                       app:cardCornerRadius="5dp">

        <ImageView android:id="@+id/group_image_view"
                   srcGlide="@{group.glideSrc}"
                   android:layout_width="match_parent" android:layout_height="match_parent"
                   android:scaleType="fitXY"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="18sp"
                  android:padding="5dp"
                  android:text="@{group.name}"/>

        <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:layout_gravity="bottom"
                                                   android:id="@+id/place_types_recycler_view"/>

    </androidx.cardview.widget.CardView>
</layout>


