<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="pagerAdapter" type="androidx.viewpager.widget.PagerAdapter"/>
        <variable name="onReverseGeocodingFabClick" type="android.view.View.OnClickListener"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.there.aroundmenow.places.PlacesFragment">

        <androidx.viewpager.widget.ViewPager
                android:id="@+id/places_view_pager"
                android:layout_width="0dp"
                android:layout_height="0dp"
                pagerAdapter="@{pagerAdapter}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/places_bottom_navigation_view"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/places_bottom_navigation_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:background="?android:attr/windowBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:menu="@menu/places_navigation"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton android:id="@+id/reverse_geocoding_fab"
                                                                               android:layout_width="wrap_content"
                                                                               android:layout_height="wrap_content"
                                                                               app:layout_constraintBottom_toTopOf="@id/places_bottom_navigation_view"
                                                                               app:layout_constraintRight_toRightOf="parent"
                                                                               android:layout_margin="10dp"
                                                                               android:src="@drawable/ic_my_location_24dp"
                                                                               android:onClick="@{onReverseGeocodingFabClick}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>