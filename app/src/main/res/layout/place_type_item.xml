<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="placeType" type="com.example.there.aroundmenow.model.UIPlaceType"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:orientation="vertical"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="3dp">

        <mbanje.kurt.fabbutton.FabButton android:layout_width="56dp"
                                         android:layout_height="56dp"
                                         app:fbb_showShadow="true"
                                         android:indeterminate="true"
                                         android:color="?attr/colorPrimaryDark"
                                         android:max="100"
                                         android:src="@{placeType.drawableId}"
                                         app:fbb_autoStart="false"
                                         app:fbb_progressColor="?attr/colorAccent"
                                         app:fbb_progressWidthRatio="0.1"
                                         app:fbb_showEndBitmap="false"
                                         app:fbb_hideProgressOnComplete="false"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="2dp"
                  android:text="@{placeType.label}"
                  android:textAlignment="center"/>
    </LinearLayout>
</layout>
