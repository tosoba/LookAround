<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="placeType" type="com.example.there.aroundmenow.model.UIPlaceType"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="3dp">

        <safety.com.br.progressimageview.ProgressImageView
                android:id="@+id/progress_image_view"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@color/colorPrimary"
                android:src="@drawable/airport"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginTop="2dp"
                  android:text="@{placeType.label}"
                  android:textAlignment="center"/>

    </LinearLayout>

</layout>
