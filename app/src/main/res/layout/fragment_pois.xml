<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".places.pois.POIsFragment">

    <androidx.recyclerview.widget.RecyclerView android:id="@+id/pois_recycler_view"
                                               android:layout_width="match_parent"
                                               android:layout_height="match_parent"
    />

    <TextView
            android:id="@+id/no_pois_found_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20sp"
            android:textAlignment="center"
            android:text="@string/no_places_of_interest_found_around_you_yet"/>

    <ProgressBar android:id="@+id/pois_loading_progress_bar" android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"/>
</FrameLayout>